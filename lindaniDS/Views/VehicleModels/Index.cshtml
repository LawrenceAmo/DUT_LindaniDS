@model IEnumerable<lindaniDS.Models.VehicleModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Index</h2>
@{ 
    var data = ViewBag.Message;
    var msg = ViewData["msg"];
}
<p>
   data @data data<br />
    @msg

    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.vehicleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vehicleMake)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vehicleBodyType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.modelName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vehicleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vehicleMake)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vehicleBodyType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.modelName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.modelID }) |
            @Html.ActionLink("Details", "Details", new { id=item.modelID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.modelID })
        </td>
    </tr>
}

</table>
