<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            padding: 0px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <span class="mx-5 px-5"> </span>
            @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-white ml-5 pl-5" })
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0 mr-5">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Link</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">Disabled</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="row p-0 m-0">
        <nav class="col-md-2 px-0 ml-0 bg-secondary" style="height:735px;" >
            <div class="list-group  bg-dark ">
                <a href="#Profile" class="list-group-item text-center bg-dark text-light">
                    <i class="fas fa-signature mr-1"></i><b>Amo Codes</b>
                </a>
                <a href="#Profile" class="list-group-item list-group-item-action waves-effect text-light bg-secondary">
                    <i class="fas fa-user mr-3"></i>profile
                </a>
                <a href="~/VehicleModels/Index" class="list-group-item list-group-item-action waves-effect bg-secondary text-light">
                    <i class="fas fa-users mr-3"></i>Vehicle Models
                </a>
                <a href="~/VehicleHires/Index" class="list-group-item list-group-item-action waves-effect bg-secondary text-light">
                    <i class="fas fa-chart-line mr-3"></i>Vehicles
                </a>
                <a href="#" class="list-group-item list-group-item-action waves-effect bg-secondary text-light">
                    <i class="fas fa-hand-holding-usd mr-3"></i>Earnings
                </a>
                <a href="#" class="list-group-item list-group-item-action waves-effect bg-secondary text-light">
                    <i class="fas fa-credit-card mr-3"></i>Payments
                </a>
                <a href="#" class="list-group-item list-group-item-action waves-effect bg-secondary text-light">
                    <i class="fas fa-user-shield mr-3"></i>Security
                </a>
                <div class="list-group-item list-group-item-action text-white shadow-lg waves-effect list-group-flush rounded bg-dark text-light">
                    <i class="fas fa-chalkboard-teacher mr-3"></i>About my Class
                </div>
                <a href="#" class="list-group-item list-group-item-action waves-effect bg-secondary text-light">
                    <i class="fas fa-cogs mr-3"></i>Class Setting
                </a>
                <a href="#" class="list-group-item list-group-item-action waves-effect bg-secondary text-light">
                    <i class="fas fa-clipboard-list mr-3"></i>All Course
                </a>


                @*  <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@



            </div>
        </nav>
        <main class="col-md-10 bg-light ml-0">
            @RenderBody()
            <hr />
            <footer class="fixed-bottom text-light">
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </main>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>