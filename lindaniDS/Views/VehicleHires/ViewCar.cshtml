@model lindaniDS.Models.VehicleHire

@{
    ViewBag.Title = "ViewCar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row mt-5 ml-5">
    <div class="col-md-4">
        @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-sm btn-info btn-outline-info rounded" })
    </div>
    <div class="col-md-6">
        <h2>Hire  @Html.DisplayNameFor(model => model.VehicleModel.vehicleName) Now</h2>
    </div>
    <div class="col-md-2">
        @Html.ActionLink("Hire Now", "AddPay", "Payments",new { id = Model.vehicleID }, new { @class = "btn btn-sm btn-primary rounded" })
    </div>
</div>
<hr />

<div class="row mx-5">
    <div class="col-md-6">
        <img class="card-img-top hoverable" src="https://vimages2.carsforsale.com/3/ds/img/1009108/avatar.jpg" width="400" height="450" alt="Card image cap">
    </div>
    <div class="col-md-6 border-left">
        @* /////////////////////////////////////////////// *@

        <table id="paginationSimpleNumbers" class="table" width="100%">
            <tbody>

                <tr>
                    <td>
                        @Html.DisplayNameFor(model => model.VehicleModel.vehicleName)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.VehicleModel.vehicleName)   @Html.DisplayFor(model => model.color)
                    </td>

                </tr>
                <tr>
                    <td>Airi Satou</td>
                    <td> @Html.DisplayFor(model => model.Email)</td>

                </tr>
                <tr>
                    <td>Brielle Williamson</td>
                    <td>  @Html.DisplayFor(model => model.regNo) @Html.DisplayFor(model => model.noPlate)</td>

                </tr>
                <tr>
                    <td>Herrod Chandler</td>
                    <td> @Html.DisplayFor(model => model.condition) @Html.DisplayFor(model => model.availability)</td>

                </tr>
                <tr>
                    <td>Unity Butler</td>
                    <td> @Html.DisplayFor(model => model.cost)</td>

                </tr>
                <tr>
                    <td>Unity Butler</td>
                    <td> @Html.DisplayFor(model => model.AddreessID)</td>

                </tr>
                <tr>
                    <td>Unity Butler</td>
                    <td> @Html.DisplayFor(model => model.PickDate)</td>

                </tr>
                <tr>
                    <td>Unity Butler</td>
                    <td> @Html.DisplayFor(model => model.DropDate)</td>

                </tr>

            </tbody>

        </table>

        @* //////////////////////////////////////////////// *@
    </div>

</div>
<div class="row ml-5">
    <div class="col-md-6">

    </div>
    <div class="col-md-6">

    </div>

</div>